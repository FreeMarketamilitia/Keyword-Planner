include README.md
include LICENSE
include requirements.txt
include .env.example
include competitor_urls.json
include main.py
include setup.py

recursive-include static *
recursive-include templates *

# Include example credentials, but exclude real ones
include credentials/*.example
exclude credentials/*

# Exclude unnecessary files
exclude .env
exclude token.json
exclude *.log
exclude venv/
exclude __pycache__/
exclude *.pyc
exclude *.pyo
exclude .DS_Store
exclude Thumbs.db
exclude .vscode/

# Exclude or keep empty directories if needed
exclude results/*
exclude uploads/*
recursive-include results .gitkeep
recursive-include uploads .gitkeep
